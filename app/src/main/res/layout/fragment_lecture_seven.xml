<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lecture_seven.LectureSevenFragment"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.MdcTypographyStyles.Body1"
        android:textAlignment="center"
        android:text="@string/lecture_seven_intro" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                style="@style/TextAppearance.MdcTypographyStyles.Body1"
                android:text="@string/shared_preferences"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lecture_seven_color_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.MdcTypographyStyles.Body1"
                android:layout_marginTop="16dp"
                android:text="@string/lecture_seven_shared_preferences"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/lecture_seven_radio_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/red"
                        android:layout_weight="0.25"/>

                    <RadioButton
                        android:id="@+id/lecture_seven_radio_green"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/green"
                        android:layout_weight="0.25"/>

                    <RadioButton
                        android:id="@+id/lecture_seven_radio_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blue"
                        android:layout_weight="0.25"/>

                    <RadioButton
                        android:id="@+id/lecture_seven_radio_blank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/blank"
                        android:layout_weight="0.25"/>

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MdcTypographyStyles.Body1"
                    android:textStyle="bold"
                    android:text="@string/room"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MdcTypographyStyles.Body1"
                    android:text="@string/lecture_seven_room_intro"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/lecture_seven_previous_colors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/previously_selected"
                    android:layout_marginTop="16dp"
                    style="@style/TextAppearance.MdcTypographyStyles.Body1"/>

                <Button
                    android:id="@+id/lecture_seven_clear_list_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center"
                    android:text="@string/clear_list"/>


            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>